<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FavourApp" 
             xmlns:viewModels="clr-namespace:FavourApp.ViewModels; assembly:FavorApp"
             x:Class="FavourApp.Profile">

    <ContentPage.BindingContext>
        <viewModels:FacebookViewModel/>
    </ContentPage.BindingContext>

    <StackLayout x:Name="MainStackLayout" Padding="8,30">
        <StackLayout Orientation = "Horizontal" Padding="0,20,0,50">
            <Image Source = "{Binding FacebookProfile.Picture.Data.Url}" HeightRequest="200" WidthRequest="200" VerticalOptions="Start"/>
            <StackLayout Orientation = "Vertical" >
                <Label Text="{Binding FacebookProfile.Id, StringFormat='Id: {0:N}'}"/>
                <Label Text="{Binding FacebookProfile.FirstName, StringFormat='FirstName: {0:N}'}"/>
                <Label Text="{Binding FacebookProfile.LastName, StringFormat='LastName: {0:N}'}"/>
                <Button x:Name="LogOut" Clicked="LogOut_Clicked" Text="Logout"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>